<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <description>uploading servlet</description>
        <display-name>Upload</display-name>
        <servlet-name>Upload</servlet-name>
        <servlet-class>kz.edu.astanait.ServletUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/UploadFile</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>Redirecting servlet</description>
        <display-name>ServletMain</display-name>
        <servlet-name>ServletMain</servlet-name>
        <servlet-class>kz.edu.astanait.ServletMain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletMain</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>Downloading servlet</description>
        <display-name>ServletDownload</display-name>
        <servlet-name>ServletDownload</servlet-name>
        <servlet-class>kz.edu.astanait.ServletDownload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDownload</servlet-name>
        <url-pattern>/ServletDownload</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>Deleting servlet</description>
        <display-name>ServletDelete</display-name>
        <servlet-name>ServletDelete</servlet-name>
        <servlet-class>kz.edu.astanait.ServletDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDelete</servlet-name>
        <url-pattern>/ServletDelete</url-pattern>
    </servlet-mapping>
</web-app>